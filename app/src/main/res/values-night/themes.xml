<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mynotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name ="colorPrimary">@color/PaleGreen</item>
        <item name="colorPrimaryVariant">@color/MediumSlateBlue</item>
        <item name="colorOnPrimary">@color/Plum</item>
        <item name="colorSecondary">@color/LightSeaGreen</item>
        <item name="colorSecondaryVariant">@color/Thistle</item>
        <item name="colorOnSecondary">@color/Salmon</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.Mynotes.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name ="colorPrimary">@color/PaleGreen</item>
        <item name="colorPrimaryVariant">@color/MediumSlateBlue</item>
        <item name="colorOnPrimary">@color/Plum</item>
        <item name="colorSecondary">@color/LightSeaGreen</item>
        <item name="colorSecondaryVariant">@color/Thistle</item>
        <item name="colorOnSecondary">@color/Salmon</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>